    <title>Edit Manufactwer</title>
    <script>
        function saveVeh() {
            document.getElementById("saveVeh").submit();
        }
        function deleteVeh(EngineNumber) {
            window.location.href = "/vehicle/delete?EngineNumber=" + EngineNumber;
        }    
    </script>
</head>

<body>
